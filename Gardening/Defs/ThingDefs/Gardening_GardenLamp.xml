<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
		<ThingDef ParentName="FurnitureBase">
			<defName>GardenLamp</defName>
			<label>garden lamp</label>
			<description>A lovely outdoor light source.</description>
      
			<graphicData>
				<texPath>Garden_Lamp_tex</texPath>
				<graphicClass>Graphic_Single</graphicClass>
				<drawSize>(1,2)</drawSize>
        <shadowData>
          <volume>(0.3, 0.6, 0.3)</volume>
          <offset>(0.0, -0.1)</offset>
        </shadowData>
			</graphicData>
      
      <comps>
        <li Class="CompProperties_Power">
          <compClass>CompPowerTrader</compClass>
          <basePowerConsumption>100</basePowerConsumption>
          <shortCircuitInRain>true</shortCircuitInRain>
        </li>
        <li Class="CompProperties_Flickable">
          <compClass>CompQuality</compClass>
        </li>
      </comps>
      
			<statBases>
				<MaxHitPoints>300</MaxHitPoints>
				<Flammability>0</Flammability>
				<Beauty>3</Beauty>
				<WorkToBuild>500</WorkToBuild>
				<Mass>10</Mass> <!--weight-->
			</statBases>
			<socialPropernessMatters>false</socialPropernessMatters>
			<size>(1,2)</size>
			<costList>
				<Steel>2</Steel>
			</costList>
			<stuffCategories>
				<li>Woody</li>
				<li>Stony</li>
			</stuffCategories>
			<costStuffCount>50</costStuffCount>
			<constructionSkillPrerequisite>1</constructionSkillPrerequisite>
      
			<!--for c# use
			<AddHediffChance>0.05</AddHediffChance>
			<HediffToAdd>Gardening</HediffToAdd>
			<thingClass>Gardening.Projectile_GardenLamp</thingClass>-->
		</ThingDef>
</Defs>
