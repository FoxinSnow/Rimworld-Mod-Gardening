<!--  Gravel Floor  -->
    <!--FloorBase is defined in core-->
     <TerrainDef Abstract="True" ParentName="FloorBase" Name="GravelFloorBase">
        <renderPrecedence>220</renderPrecedence>
        <description>A gravel floor is super nice for using in outdoor environment. Get you a beautiful garden look.</description>
        <designationCategory>Gardening</designationCategory>
        <texturePath>Gravel_Floor_tex</texturePath>
        <statBases>
            <WorkToBuild>200</WorkToBuild>
            <Beauty>3</Beauty>
        </statBases>
<!--        <designatorDropdown>Floor_Tile</designatorDropdown>-->
